@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        var name = (User.Identity as System.Security.Claims.ClaimsIdentity).Claims.First(a => a.Type == "name").Value;
        //@Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a id="profile-link">@User.Identity.Name</a>
            <div id="profile-options" class="nav navbar-nav navbar-right">
                <ul class="profile-links">
                    <li class="profile-link">
                        @Html.ActionLink("Edit Profile", "Profile", "Account")
                    </li>
                </ul>
            </div>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "SignUp", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
